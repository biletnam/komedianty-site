/*
 *  FONTS
 */
@import "_fonts"

//
//  VARIABLES
//

$text_color = white - 10%
$body_color = #000000
$page_color = black

$main_color = #FF2929
$gray_color = #848484

$rem = 16px
$line = $rem * 1.6

$pad1 = 50px
$mod = 80px

//
//  LIBS & FRAMEWORKS
//
@import "axis"
@import "jeet"

/*
 *  NORMALIZE
 */
normalize-css()



/*
 *  GENERAL
 */

//
// BOX-SIZING reset
//
// box-sizing-reset()


body
	background-color $body_color
	color $text_color

	font-size $rem
	font-family "proba_proregular"




/*
 *  BASE TYPOGRAPHY
 */


// HEADINGS
h1
	h1()
h2
	h2()
h3
	h3()
h4
	h4()
h5
	h5()
h6
	h6()

// PRE & CODE
pre
	pre()
code
	code()

// QUOTES
blockquote
	blockquote()

// IMG
img
	max-width 100%


// ANCHORS



// edit()

/*
 *  HEAD LOGO
 */
#masthead
	cf()

	width 1440px // ------------------------------------------------------------ ???
	position fixed
	top 0
	z-index 9999
	transition all 3s
	// background-color rgba(0,0,0,0)
	// gradient: rgba(0,0,0,.5) rgba(0,0,0,0)
	background: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,0) 100%);
	ease-in-quad()

#masthead.shrink
	// background-color rgba(0,0,0,.9)
	// gradient: rgba(0,0,0,1) rgba(0,0,0,0) 75%
	background: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 55%, rgba(1,0,0,0.15) 90%, rgba(1,0,0,0) 100%);
	transition all 5s

.site-branding
	span(1/7, offset: 1/7)

	// width 236px
	height 164px

	background: url("./../images/logo-large.png") no-repeat;

	hover-pop: 1.02

	h1
		font: 0/0 a;
		margin 0
		padding 0
		width 100%
		height 100%

	.home-link
		display block
		width 100%
		height 100%

		&:hover
			border none

.descriptor
	span(4/7)
	padding-top 28px
	color $gray_color
	fs: 0.75rem
	// padding-left $pad1
	position relative
	left 50px


	// Выравнивание по ширине
	div
		width 100%
		text-align justify
		/* Обнуляем для родителя*/
		line-height 0
		font-size 1px /* 1px для Opera */
		/* Лекарство для IE6-7*/
		text-justify newspaper
		zoom 1
		/* Включаем в работу последнюю строку*/
		text-align-last: justify
		&:after
			width 100%
			height 0px
			visibility hidden
			overflow hidden
			content ''
			display inline-block
		p
			display inline-block
			text-align left
			/* Востанавливаем у потомков, кроме последнего*/
			line-height normal
			fs 0.75rem
			/* Без него в Opera будет отступ под элементами */
			vertical-align top
			/* эмуляция inline-block для IE6-7*/
			//display inline
			//zoom 1
	.social-top
		i
			fs: 1rem
			padding 0 0.2em

			&:hover
				color $gray_color+25%
				cursor pointer


/*
 *  MENU
 */
#site-navigation
	position relative
	left $pad1

	span(4/7)
	position relative
	// padding-left $pad1

	a
		link $main_color 'underline'


	ul
		margin 0
		padding 0

		li
			margin 0
			padding 0

			// width 15em

	// Выравнивание по ширине
	ul
		width 100%
		text-align justify
		/* Обнуляем для родителя*/
		line-height 0
		font-size 1px /* 1px для Opera */
		/* Лекарство для IE6-7*/
		text-justify newspaper
		zoom 1
		/* Включаем в работу последнюю строку*/
		text-align-last: justify
		&:after
			width 100%
			height 0px
			visibility hidden
			overflow hidden
			content ''
			display inline-block
		li
			display inline-block
			text-align left
			/* Востанавливаем у потомков, кроме последнего*/
			line-height normal
			fs 0.875rem
			/* Без него в Opera будет отступ под элементами */
			vertical-align top
			/* эмуляция inline-block для IE6-7*/
			//display inline
			//zoom 1

	.search
		// width (100%/7)
		i
			float left
			color $gray_color
			fs: 1.3em
		form
			margin 0
			padding 0
			display inline-block
			margin-left 7px
			input
				margin 0
				padding 0
				background-color $body_color
				border none
				border-bottom 1px solid $gray_color




