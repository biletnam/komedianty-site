/*
 *  PLAYBILL
 */
#playbill
	cf()
	height 12*$mod
	position relative
	margin-bottom $mod
	.event

		position absolute
		// position relative
		top 0
		right 0
		width 100%
		height 100%

	.title-block
		position absolute
		bottom 3*$line
		right (100%/7)

		text-align right

		.title
			margin 0

			font-family 'Georgia', serif
			fs: 2.8rem
			line-height 1em
			text-transform uppercase
			letter-spacing 0.1em
			text-align right

			height $mod

			font-weight bold

		.author
			margin 0
			margin-bottom 1em

			fs: 2.5rem
			line-height 1em
			text-transform uppercase
			letter-spacing 0.1em
			text-align right

	.date-block
		position absolute
		background-color #E3D2C4
		width (100%/7)
		height 5*$mod
		top 3*$mod
		left (100%/7)
		padding 0 ($pad1/2)

		color black
		font-family 'Georgia', serif
		text-transform uppercase
		letter-spacing 0.1em

		.day
			fs: 12.5rem
			line-height 1em
		.month
			// fs: 2rem
			font-weight bold
		.weekday
			// fs: 1.8rem
		.day, .month, .weekday
			// line-height 1.2em
			margin 0
			padding 0

		text-align center

		.button-buy
			margin-top $line
			button()

	.calendar
		height 45px
		background $main_color
		position absolute
		bottom 0
		width 100%
		color $text_color
		fs: 1.5rem
		text-align center
		a
			// vertically-align()
			display inline-block
			color $text_color
			background $main_color
			&:hover
				border none
			hover-pop()
			padding 0 0.5em
			line-height 44px



